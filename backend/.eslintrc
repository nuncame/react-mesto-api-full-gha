{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": "latest",
  },
  "rules": {
    "no-useless-escape": "off",
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "arrow-body-style": ["error", "always"],
    "linebreak-style": ["error", "unix"],
  },
}